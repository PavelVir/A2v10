{
	"name": "A2v10 browser companion",
	"version": "10.0.7001",
	"manifest_version": 2,
	"description": "Communicate with A2v10 native applications.",
	"permissions": [
		"nativeMessaging"
	],
	"icons": {
		"128": "a2v10-128.png"
	},
	"externally_connectable": {
		"matches": [
			"*://*.a2start.com/*",
			"*://localhost/*",
			"*://thishost/*"
		]
	},
	"background": {
		"matches": [
			"*://*.a2start.com/*",
			"*://localhost/*",
			"*://thishost/*"
		],
		"scripts": [ "background.js" ],
		"persistent": false
	}
}